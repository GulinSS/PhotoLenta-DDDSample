<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>@ViewBag.Title</title>
		<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/bootstrap-responsive.min.css")"/>
		<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/bootstrap.min.css")"/>
		<script type="text/javascript" src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")"> </script>
		<script type="text/javascript" src="@Url.Content("~/Content/js/bootstrap.min.js")"> </script>
		<style type="text/css">
			body {
				padding-bottom: 40px;
				padding-top: 60px;
			}

			.sidebar-nav { padding: 9px 0; }
		
		/* For modern browsers */

			.cf:before, .cf:after {
				content: "";
				display: table;
			}

			.cf:after { clear: both; }
		
		/* For IE 6/7 (trigger hasLayout) */

			.cf { zoom: 1; }
		</style>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container-fluid">
					<a class="brand" href="@Url.Action("Index", "Gallery")">Фотолента</a>
					<ul class="nav">
						<li><a href="#">Опубликовать фотографию</a></li>
						<li><a href="@Url.Action("AboutAvatar", "Info")">Как изменить аватар?</a></li>
					</ul>
					<img class="pull-right" style="padding-left: 5px" src="http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&s=40"/>
					<p class="navbar-text pull-right">
						Для публикации изображения необходимо <a href="#">войти</a></p>
				</div>
			</div>
		</div>
		<div class="container">
			@RenderBody()
		</div>
	</body>
</html>